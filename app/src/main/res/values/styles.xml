<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Cell style -->
    <style name="CellStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/cell_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/raise_on_touch</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CellEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@color/darkGray</item>
        <item name="android:hint">Enter your text/code...</item>
    </style>
</resources>
